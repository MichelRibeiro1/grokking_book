{
    "env": {
        "browser": false,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:mocha/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "no-else-return": "off",
        "no-underscore-dangle": "off"
    },
    "plugins": [
        "mocha"
    ]
}
